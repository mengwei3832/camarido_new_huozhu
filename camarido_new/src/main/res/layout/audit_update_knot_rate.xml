<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_selvehicle_parent_mine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ppw_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_250"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_42"
            android:background="@color/color_ececec"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_update_cancle_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_30"
                android:text="@string/repeat_cancel"
                android:textColor="@color/color_ff4400"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_update_sure_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_30"
                android:text="@string/sure"
                android:textColor="@color/color_229AEE"
                android:textSize="@dimen/space_16" />
        </RelativeLayout>
        
        <TextView 
            android:id="@+id/tv_should_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="13sp"
            android:layout_marginTop="@dimen/space_13"
            android:layout_gravity="center_horizontal"
            android:text="@string/audit_update_should_text"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_e4e4e4" />

        <LinearLayout
            android:id="@+id/rl_update_nickname_mine"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_41" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_48"
                android:text="@string/audit_amount_settlement"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_update_nickName_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="@color/color_ffffff"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_cccccc"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:layout_marginLeft="@dimen/space_10"
            android:background="@color/color_e4e4e4" />

        <RelativeLayout
            android:id="@+id/rl_update_sex_mine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_41" >

            <TextView
                android:id="@+id/tv_au_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_48"
                android:text="@string/audit_pay_type"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />
            
            <CheckBox 
                android:id="@+id/cb_choose_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:checked="true"
                android:button="@drawable/choose_pay"
                android:layout_toRightOf="@+id/tv_au_text1"
                android:layout_marginLeft="@dimen/space_10"
                android:text="@string/audit_pay_type_after"/>
            
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:layout_marginLeft="@dimen/space_10"
            android:background="@color/color_e4e4e4" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_41" >

            <TextView
                android:id="@+id/tv_au_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_48"
                android:text="@string/audit_pay_type"
                android:textColor="@color/color_333333"
                android:textSize="15sp" 
                android:visibility="invisible"/>
            
            <CheckBox 
                android:id="@+id/cb_choose_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_au_text2"
                android:layout_marginLeft="@dimen/space_10"
                android:button="@drawable/choose_pay"
                android:text="@string/audit_pay_type_cash"/>
            <CheckBox 
                android:id="@+id/cb_choose_cash_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/color_999999"
                android:layout_toRightOf="@+id/tv_au_text2"
                android:visibility="gone"
                android:checked="false"
                android:button="@drawable/buke"
                android:layout_marginLeft="@dimen/space_10"
                android:text="@string/audit_pay_type_cash_no"/>
            <TextView 
                android:id="@+id/tv_choose_cash_no1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999999"
                android:visibility="gone"
                android:layout_toRightOf="@+id/cb_choose_cash_no"
                android:layout_centerVertical="true"
                android:text="@string/audit_pay_type_cash_no1"
                android:textSize="11sp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:layout_marginLeft="@dimen/space_10"
            android:background="@color/color_e4e4e4" />

        <RelativeLayout
            android:id="@+id/rl_update_age_mine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50" >

            <TextView
                android:id="@+id/tv_au_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_48"
                android:text="@string/audit_note"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_update_age_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:layout_toRightOf="@+id/tv_au_text3"
                android:layout_marginLeft="@dimen/space_30"
                android:background="@null"
    			android:scrollbars="vertical"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_e4e4e4" />
    </LinearLayout>

</RelativeLayout>