<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:descendantFocusability="blocksDescendants" >
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_188"
        android:layout_margin="@dimen/space_10"
        android:background="@drawable/ticket_card_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@color/color_cceeff" >

            <TextView
                android:id="@+id/tv_item_tongji_vehicleno"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_10"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color_00bbff"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_item_tongji_jingjiren"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/space_10"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color_00bbff"
                android:textSize="13sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/space_10"
                        android:gravity="center_vertical"
                        android:text="@string/employer_item_tv_kuangfa"
                        android:textColor="@color/color_303030"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_item_tongji_kuangfa"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/space_5"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_ff8811"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_item_tongji_kuangfa_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/space_5"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_606060"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/color_cceeff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/space_10"
                        android:gravity="center_vertical"
                        android:text="@string/employer_item_tv_qianshou"
                        android:textColor="@color/color_303030"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_item_tongji_qianshoou"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/space_5"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_ff8811"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_item_tongji_qianshoou_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/space_5"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_606060"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/color_cceeff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_item_tongji_current_money"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/space_10"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_303030"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" >

                <ImageView
                    android:id="@+id/iv_item_tongji_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_cceeff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="@dimen/space_150"
                    android:layout_height="@dimen/space_40"
                    android:orientation="horizontal"
                    android:background="@drawable/chengyun_kuang"
                    android:layout_centerInParent="true" >
					<TextView 
					    android:id="@+id/tv_item_tongji_yunfei"
					    android:layout_width="0dp"
					    android:layout_weight="3"
					    android:layout_height="match_parent"
					    android:gravity="center"
					    android:text=""
					    android:textColor="@color/color_303030"
					    android:textSize="12sp"/>
					<View 
					    android:layout_width="@dimen/space_1"
					    android:layout_height="match_parent"
					    android:layout_marginTop="@dimen/space_10"
					    android:layout_marginBottom="@dimen/space_10"
					    android:background="@color/color_ffdd00"/>
					<TextView 
					    android:id="@+id/tv_item_tongji_money"
					    android:layout_width="0dp"
					    android:layout_weight="7"
					    android:layout_height="match_parent"
					    android:gravity="center"
					    android:text=""
					    android:textColor="@color/color_303030"
					    android:textSize="13sp"
					    android:textStyle="bold"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                <Button 
                    android:id="@+id/bt_item_tongji_action"
                    android:layout_width="@dimen/space_180"
                    android:layout_height="@dimen/space_40"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:textColor="@color/color_ffffff"
                    android:textSize="15sp"
                    android:layout_marginRight="@dimen/space_10"
                    android:background="@drawable/waybill_btn_bg"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>