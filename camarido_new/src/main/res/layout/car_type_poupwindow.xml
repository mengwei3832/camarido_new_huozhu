<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_pop_carType"
    android:background="@drawable/ppw_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="262dp"
            android:background="@color/color_ffffff"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_62"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_cartype_cancle"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/repeat_cancel"
                    android:textColor="@color/color_ff4400"
                    android:paddingRight="@dimen/space_30"
                    android:paddingLeft="30dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_cartype_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/space_30"
                    android:paddingLeft="30dp"
                    android:clickable="true"
                    android:text="@string/sure"
                    android:textColor="@color/color_229AEE"
                    android:textSize="@dimen/space_16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="@color/color_e4e4e4" />

            <ListView
                android:id="@+id/lv_car_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="@color/color_e4e4e4" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>