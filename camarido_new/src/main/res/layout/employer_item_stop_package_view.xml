<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/color_f1f1f1">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_95"
        android:layout_margin="@dimen/space_10"
        android:orientation="vertical"
        android:background="@drawable/quote_bg_yibaojia">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/color_cceeff"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/tv_item_stop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/space_10"
                android:text="卡美丽水1234车队"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/color_303030"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/space_10"
                android:orientation="vertical">
                <TextView 
                    android:id="@+id/tv_stop_item_zhixing_price"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="执行价格:220.0元/吨"
                    android:textSize="12sp"/>
                <TextView 
                    android:id="@+id/tv_stop_item_date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="(有效时间：09.22~09.23)"
                    android:textColor="@color/color_AFAFAF"
                    android:textSize="10sp"/>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView 
                        android:id="@+id/tv_stop_item_yipai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已派车：200车"
                        android:textSize="12sp"/>
                    <TextView 
                        android:id="@+id/tv_stop_item_yijie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/space_10"
                        android:text="已派车：200车"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout 
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent">
                <Button 
                    android:id="@+id/bt_item_stop_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_centerInParent="true"
                    android:background="@drawable/sendbao_btn_background"
                    android:text="@string/employer_item_quote_quxiao"
                    android:textColor="@color/color_ffffff"
                    android:textSize="13sp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
