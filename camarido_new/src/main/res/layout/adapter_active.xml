<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F9F9F9"
    android:orientation="vertical"
    android:padding="@dimen/space_6" >

    <TextView
        android:id="@+id/tv_active_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/space_20"
        android:layout_marginTop="@dimen/space_10"
        android:background="@drawable/msg_time"
        android:gravity="center"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:textColor="@color/color_ffffff"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/second_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/discover_active_item_selector"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:paddingTop="@dimen/space_10" >

        <TextView
            android:id="@+id/tv_active_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_10"
            android:drawablePadding="@dimen/space_5"
            android:drawableRight="@drawable/active_red"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="标题"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/space_16" />

        <TextView
            android:id="@+id/tv_active_digst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="摘要"
            android:textColor="#6a6a6a"
            android:textSize="@dimen/space_12" />

        <ImageView
            android:id="@+id/iv_active_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_162"
            android:layout_marginBottom="@dimen/space_10"
            android:scaleType="fitXY" />
    </LinearLayout>

</LinearLayout>