<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/color_f1f1f1">
    <LinearLayout 
        android:id="@+id/ll_ship_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_ffffff"
        android:layout_marginTop="@dimen/space_10">
        <RelativeLayout 
            android:id="@+id/rl_ship_common"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_10"
                android:textSize="15sp"
                android:textColor="@color/color_2299EE"
                android:text="@string/employer_activity_choos_ship"/>
            
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_10"
                android:src="@drawable/jiantouzixun"/>
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_f1f1f1"/>
        <RelativeLayout 
            android:id="@+id/rl_ship_choose"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45">
            <TextView 
                android:id="@+id/tv_address_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_10"
                android:textSize="15sp"
                android:textColor="@color/color_2299EE"
                android:text="@string/employer_activity_choos_diqu"/>
            
            <TextView 
                android:id="@+id/tv_sheng_shi_qu"
                android:layout_toRightOf="@id/tv_address_tip"
                android:layout_toLeftOf="@+id/iv_address"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_10"
                android:textSize="15sp"
                android:textColor="#FF0000"
                android:text="@string/tv_must"/>
            
            <ImageView 
                android:id="@+id/iv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_10"
                android:src="@drawable/jiantouzixun"/>
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_f1f1f1"/>
        <RelativeLayout 
            android:id="@+id/rl_ship_input_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45">
            <EditText 
                android:id="@+id/et_ship_input_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:singleLine="true"
                android:paddingLeft="@dimen/space_10"
                android:maxLength="20"
                android:textSize="15sp"
                android:drawableRight="@drawable/bianji"
                android:paddingRight="@dimen/space_10"
                android:hint="@string/employer_activity_input_detailted"/>
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_f1f1f1"/>
        <RelativeLayout 
            android:id="@+id/rl_ship_input_"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45">
            <EditText 
                android:id="@+id/et_ship_input_company"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:singleLine="true"
                android:paddingLeft="@dimen/space_10"
                android:textSize="15sp"
                android:maxLength="20"
                android:drawableRight="@drawable/bianji"
                android:paddingRight="@dimen/space_10"
                android:hint="@string/employer_activity_input_company"/>
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_f1f1f1"/>
        <TextView 
            android:id="@+id/tv_ship_redtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/color_ff0000"
            android:text="@string/employer_activity_input_prompt"/>
    </LinearLayout>
    
    <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/lv_ship_highway"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_ship_top"
            android:layout_marginTop="@dimen/space_10"
            android:layout_above="@+id/bt_ship_finish"
            android:divider="@drawable/list_view_driver_line" >
        </com.handmark.pulltorefresh.library.PullToRefreshListView>
    
    <Button 
        android:id="@+id/bt_ship_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_10"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bt_cartype"
        android:text="@string/employer_activity_finish"
        android:textColor="@color/color_ffffff"/>
    
    <ProgressBar 
        android:id="@+id/pb_ship_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>
