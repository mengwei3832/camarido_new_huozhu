<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
      android:id="@+id/carlist_detail_header"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:orientation="horizontal"
         >
    <RadioGroup 
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/selectroute_list_rg"
        android:orientation="horizontal"
        android:background="@android:color/white"
        >     
     <RadioButton
         android:id="@+id/rb_selectroute_attention" 
         android:layout_width="match_parent"
         android:layout_height="fill_parent"
         android:layout_weight="1"
         android:button="@android:color/transparent"
         android:paddingTop="10dp"
         android:paddingBottom="10dp"
         android:background="@drawable/carlist_basic_selector"
         android:text="@string/rb_selectroute_attention"
         android:textSize="15sp"
         android:textColor="@drawable/carlist_reserve_selector"
         android:gravity="center"
    />

     
    <RadioButton
        android:id="@+id/rb_selectroute_routes"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/carlist_basic_selector"
        android:button="@android:color/transparent"
        android:text="@string/rb_selectroute_routes"
        android:textSize="15sp"
        android:textColor="@drawable/carlist_reserve_selector"
        android:gravity="center"
   />
        
   </RadioGroup>
</LinearLayout>

  	<FrameLayout
        android:id="@+id/fl_selectroute_container"
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_weight="1"
        >
    </FrameLayout>

</LinearLayout>
