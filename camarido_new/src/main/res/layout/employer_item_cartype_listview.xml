<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff" >
    
    <CheckBox
        android:clickable="false"
        android:focusable="false" 
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:id="@+id/cb_cartype_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="110dp"
        android:button="@drawable/employer_activity_cartype_item_selector"/>
    <TextView 
        android:id="@+id/tv_cartype_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cb_cartype_item"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_10"/>
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/color_f1f1f1"
        android:layout_below="@id/cb_cartype_item"/>

</RelativeLayout>
