<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_30" >

        <TextView
            android:id="@+id/tv_task_list_plateNumber"
            android:layout_width="@dimen/space_70"
            android:layout_height="match_parent"
            android:background="@color/color_8c40f0"
            android:gravity="center"
            android:text="äº¬A12345"
            android:textColor="@color/color_ffffff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="@dimen/space_1"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff" />

        <TextView
            android:id="@+id/tv_task_list_addCar"
            android:layout_width="@dimen/space_69"
            android:layout_height="match_parent"
            android:background="@color/color_8c40f0"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/color_ffffff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="@dimen/space_1"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff" />

        <TextView
            android:id="@+id/tv_task_list_firstTransport"
            android:layout_width="@dimen/space_69"
            android:layout_height="match_parent"
            android:background="@color/color_8c40f0"
            android:gravity="center"
            android:text="20"
            android:textColor="#999"
            android:textSize="14sp" />

        <TextView
            android:layout_width="@dimen/space_1"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff" />

        <TextView
            android:id="@+id/tv_task_list_twoTransport"
            android:layout_width="@dimen/space_69"
            android:layout_height="match_parent"
            android:background="@color/color_8c40f0"
            android:gravity="center"
            android:text="30"
            android:textColor="#999"
            android:textSize="14sp" />

        <TextView
            android:layout_width="@dimen/space_1"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff" />

        <TextView
            android:id="@+id/tv_task_list_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_8c40f0"
            android:gravity="center"
            android:text="2016/12/12"
            android:textColor="@color/color_ffffff"
            android:textSize="14sp" />
    </LinearLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/color_ffffff"/>

</LinearLayout>