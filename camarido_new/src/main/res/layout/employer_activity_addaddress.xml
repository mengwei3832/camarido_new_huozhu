<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f1f1f1"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ll_addaddress_shengshiqu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_35"
        android:layout_marginTop="@dimen/space_7"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/employer_address_all"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="@dimen/space_20"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_addaddress_dizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv"
            android:layout_marginLeft="@dimen/space_10"
            android:textColor="@color/color_666666"
            android:textSize="14sp" />
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space_20"
            android:src="@drawable/jiantouzixun"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1" />

    <RelativeLayout
        android:id="@+id/ll_addaddress_shuru"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_35"
        android:background="@color/color_ffffff" >

        <TextView
            android:id="@+id/tv_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/employer_address_input"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_centerVertical="true"
            android:textSize="14sp" />
        
        <EditText
            android:id="@+id/et_addaddress_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_toRightOf="@+id/tv_address_text"
            android:background="@null"
            android:singleLine="true"
            android:hint="@string/employer_address_write"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1" />
    
    <RelativeLayout
        android:id="@+id/ll_addaddress_danwei"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_35"
        android:background="@color/color_ffffff" >

        <TextView
            android:id="@+id/tv_address_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/employer_address_danwei"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_centerVertical="true"
            android:textSize="14sp" />
        
        <EditText
            android:id="@+id/et_addaddress_danwei"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_toRightOf="@+id/tv_address_text1"
            android:background="@null"
            android:singleLine="true"
            android:hint="@string/employer_address_danwei_write"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_35"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_ff0000"
            android:layout_marginLeft="@dimen/space_30"
            android:text="@string/employer_address_text" />
    </LinearLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

</LinearLayout>