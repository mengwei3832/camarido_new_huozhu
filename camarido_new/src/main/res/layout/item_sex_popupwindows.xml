<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ppw_bg" >

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ffffff"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_edebf0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_55"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/item_popupwindows_sex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_nobgd"
                android:text="@string/item_popupwindows_sex"
                android:textColor="@color/color_229AEE"
                android:textSize="24sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_edebf0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_55"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/item_popupwindows_man"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_nobgd"
                android:text="@string/item_popupwindows_man"
                android:textColor="@color/color_333333"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_edebf0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_55"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/item_popupwindows_female"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_nobgd"
                android:text="@string/item_popupwindows_female"
                android:textColor="@color/color_333333"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_edebf0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_55"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/item_popupwindows_sexcancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_nobgd"
                android:text="@string/item_popupwindows_cancel"
                android:textColor="@color/color_333333"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>