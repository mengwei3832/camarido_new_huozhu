<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff" >

    <LinearLayout
        android:id="@+id/ll_drivermsg_global"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_263"
                    android:background="@color/color_229AEE"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_16" >

                        <ImageButton
                            android:id="@+id/ib_drivermsg_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/nav_back" />

                        <TextView
                            android:id="@+id/tv_drivermsg_titlemsg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/tv_drivermsg_titlemsg"
                            android:textColor="@color/color_ffffff"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_drivermsg_save"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_10"
                            android:text="@string/tv_drivermsg_save"
                            android:textColor="@color/color_ffffff"
                            android:textSize="18sp"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_28" >

                        <com.yunqi.clientandroid.view.CircleImageView
                            android:id="@+id/iv_drivermsg_driverHeader"
                            android:layout_width="@dimen/space_70"
                            android:layout_height="@dimen/space_70"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/personal_header"
                            app:border_color="@color/light"
                            app:border_width="2dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_15" >

                        <TextView
                            android:id="@+id/tv_drivermsg_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/color_ffffff"
                            android:textSize="18sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_22"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_drivermsg_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_ffffff"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_drivermsg_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/color_ffffff"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_12"
                    android:background="@color/color_F9F9F9" />

                <RelativeLayout
                    android:id="@+id/rl_drivermsg_data"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_250"
                    android:background="@color/color_ffffff" >

                    <RelativeLayout
                        android:id="@+id/rl_drivermsg_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_17"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/tv_drivermsg_driverlicense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_22"
                            android:text="@string/tv_drivercertification_driverlicense"
                            android:textColor="@color/color_333333"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_drivermsg_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/space_22"
                            android:textColor="@color/color_333333"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/v_drivercertification_view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/rl_drivermsg_information"
                        android:layout_marginLeft="@dimen/space_10"
                        android:layout_marginRight="@dimen/space_10"
                        android:layout_marginTop="@dimen/space_15"
                        android:background="@color/color_e0dedc" />

                    <ImageView
                        android:id="@+id/iv_drivermsg_photoimg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_200"
                        android:layout_below="@id/v_drivercertification_view1"
                        android:layout_marginLeft="@dimen/space_10"
                        android:layout_marginRight="@dimen/space_10"
                        android:layout_marginTop="@dimen/space_5"
                        android:scaleType="fitXY"
                        android:src="@drawable/driver_camera" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_46"
                    android:background="@color/color_ffffff"
                    android:gravity="center_vertical" >

                    <CheckBox
                        android:id="@+id/cb_drivermsg_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_22"
                        android:button="@drawable/drivercheck"
                        android:paddingLeft="@dimen/space_10"
                        android:text="@string/cb_drivermsg_default"
                        android:textColor="@color/color_333333"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/v_drivercertification_view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:background="@color/color_e0dedc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_46"
                    android:background="@color/color_ffffff"
                    android:gravity="center_vertical" >

                    <CheckBox
                        android:id="@+id/cb_drivermsg_grap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_22"
                        android:button="@drawable/drivercheck"
                        android:paddingLeft="@dimen/space_10"
                        android:text="@string/packagedetail_determine"
                        android:textColor="@color/color_333333"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/space_10"
                        android:text="@string/tv_drivermsg_systemOrder"
                        android:textColor="@color/color_666666"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/v_drivercertification_view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:background="@color/color_e0dedc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="@color/color_ffffff"
                    android:gravity="center_vertical" >

                    <CheckBox
                        android:id="@+id/cb_drivermsg_settlement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_22"
                        android:button="@drawable/drivercheck"
                        android:paddingLeft="@dimen/space_10"
                        android:text="@string/tv_drivermsg_settlement"
                        android:textColor="@color/color_333333"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/space_10"
                        android:text="@string/tv_drivermsg_Withdraw"
                        android:textColor="@color/color_666666"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/v_drivercertification_view4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:background="@color/color_e0dedc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_46"
                    android:background="@color/color_ffffff"
                    android:gravity="center_vertical" >

                    <CheckBox
                        android:id="@+id/cb_drivermsg_perform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_22"
                        android:button="@drawable/drivercheck"
                        android:paddingLeft="@dimen/space_10"
                        android:text="@string/tv_drivermsg_perform"
                        android:textColor="@color/color_333333"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/space_10"
                        android:text="@string/tv_drivermsg_entire"
                        android:textColor="@color/color_666666"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_70"
                    android:background="@color/color_F9F9F9" >

                    <Button
                        android:id="@+id/bt_drivermsg_delete"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_48"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/space_10"
                        android:layout_marginRight="@dimen/space_10"
                        android:background="@drawable/mine_logout_seletor"
                        android:text="@string/bt_drivermsg_delete"
                        android:textColor="@color/color_ffffff"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_drivermsg_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>