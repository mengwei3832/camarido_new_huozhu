<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="#FFFFFF">
    <TextView 
        android:id="@+id/tv_item_data_time"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/space_40"
        android:textSize="13sp"
        android:gravity="center"
        android:textColor="@color/color_666666"/>
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/space_40"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/tv_item_data_cityName_begin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/color_666666"/>
        <TextView 
            android:id="@+id/tv_item_data_companyName_begin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="13sp"
            android:textColor="@color/color_666666"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/space_40"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/tv_item_data_cityName_end"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="@color/color_666666"/>
        <TextView 
            android:id="@+id/tv_item_data_companyName_end"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/color_666666"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/space_40"
        android:orientation="vertical">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/employer_activity_statistical_see_biao"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/color_2299EE"/>
    </LinearLayout>
</LinearLayout>
