<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdfdf"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/rl_safety_setting_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_45"
        android:layout_marginTop="@dimen/space_15"
        android:background="#fff">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/my_safety_setting_pass"
            android:paddingLeft="@dimen/space_15"
            android:textSize="18sp"
            android:textColor="#333"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantouyou"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/space_15"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_safety_forget_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_45"
        android:layout_marginTop="@dimen/space_1"
        android:layout_below="@+id/rl_safety_setting_pass"
        android:background="#fff">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/my_safety_forget_pass"
            android:paddingLeft="@dimen/space_15"
            android:textSize="18sp"
            android:textColor="#333"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantouyou"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/space_15"/>
    </RelativeLayout>
    
    
    <TextView 
        android:id="@+id/tv_safety_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/space_50"
        android:text="@string/easy_question"
        android:textSize="14sp"
        android:textColor="#ff0000"/>

</RelativeLayout>
