<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff" >

    <LinearLayout
        android:id="@+id/ll_driver_global"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_140"
            android:background="@color/color_F9F9F9"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_drivercertification_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_48"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/login_biankuang" >

                <EditText
                    android:id="@+id/et_drivercertification_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_biankuang"
                    android:hint="@string/tv_driving_name"
                    android:paddingLeft="@dimen/space_20"
                    android:textColorHint="@color/color_cccccc" />

                <ImageView
                    android:id="@+id/iv_drivercertification_delete1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_37"
                    android:src="@drawable/login_delete"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_drivercertification_idCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_48"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/login_biankuang" >

                <EditText
                    android:id="@+id/et_drivercertification_idCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_biankuang"
                    android:hint="@string/et_driving_idcard"
                    android:paddingLeft="@dimen/space_20"
                    android:textColorHint="@color/color_cccccc" />

                <ImageView
                    android:id="@+id/iv_drivercertification_delete2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_37"
                    android:src="@drawable/login_delete"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_drivercertification_data"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_320"
            android:background="@color/color_ffffff" >

            <RelativeLayout
                android:id="@+id/rl_drivercertification_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_15" >

                <TextView
                    android:id="@+id/tv_drivercertification_driverlicense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:text="@string/tv_drivercertification_driverlicense"
                    android:textColor="@color/color_333333"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:id="@+id/v_drivercertification_view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:layout_below="@id/rl_drivercertification_information"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_15"
                android:background="@color/color_e0dedc" />

            <ImageView
                android:id="@+id/iv_drivercertification_photoimg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_200"
                android:layout_below="@id/v_drivercertification_view1"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_5"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/driver_camera" />

            <TextView
                android:id="@+id/tv_drivercertification_myProssBarhandleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_drivercertification_photoimg"
                android:layout_marginTop="@dimen/space_15"
                android:gravity="center"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/pb_drivercertification_myProssBarhandle"
                style="@style/tallerBarStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_10"
                android:layout_below="@id/tv_drivercertification_myProssBarhandleText"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_5"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:visibility="gone" >
            </ProgressBar>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/color_F9F9F9" >

            <Button
                android:id="@+id/bt_drivercertification_agreed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_48"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:background="@drawable/login_button_selector"
                android:text="@string/bt_namecertification_agreed"
                android:textColor="@color/color_ffffff"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_driver_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>