<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/order_backound"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_order"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/carlistBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_10"
        android:paddingTop="@dimen/space_10" >

        <LinearLayout
            android:id="@+id/ll_sort"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <CheckBox
                android:layout_height="match_parent"
                android:id="@+id/cb_sort"
                style="@style/order_detail2"
                android:layout_gravity="center_vertical"
                android:background="@drawable/order_filter_click"
                android:gravity="right|center_vertical"
                android:text="@string/order_sort" />

            <ImageView
                android:id="@+id/iv_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_triangle_nomal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_filter"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <CheckBox
                android:layout_height="match_parent"
                android:id="@+id/cb_filter"
                style="@style/order_detail2"
                android:layout_gravity="center_vertical"
                android:background="@drawable/order_filter_click"
                android:gravity="right|center_vertical"
                android:text="@string/order_filter" />

            <ImageView
                android:id="@+id/iv_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_triangle_nomal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_change"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center" >

            <CheckBox
                android:id="@+id/cb_change"
                style="@style/OrderImageViewViewStyle" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/order_blue_line" />

    <FrameLayout
        android:id="@+id/fl_order_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

</LinearLayout>