<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_settlement_pop"
    android:background="@drawable/ppw_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_online_billing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45"
            android:background="@color/color_ffffff" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_40"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_tj_top1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cb_online"
                    android:textColor="@color/color_444444"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_tj_top2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_5"
                    android:text="@string/tv_insurance"
                    android:textColor="@color/color_ff0000"
                    android:layout_marginRight="@dimen/space_10"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_f1f1f1"/>
        <RelativeLayout 
            android:id="@+id/rl_clear_the_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45"
            android:background="@color/color_ffffff">
            <TextView
                android:id="@+id/tv_tj_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_40"
                android:textColor="@color/color_444444"
                android:layout_marginRight="@dimen/space_10"
                android:text="@string/cb_outline"/>
        </RelativeLayout>
        
    </LinearLayout>

</RelativeLayout>