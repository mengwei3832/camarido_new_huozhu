<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f1f1f1" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_300"
        android:orientation="vertical"
        android:background="@color/color_ffffff"
        android:layout_centerInParent="true">
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/tv_new_version"
                android:textColor="@color/color_00bbff"
                android:textSize="18sp"/>
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_00bbff"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/tv_update_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_10"
                android:text="@string/tv_hint_version_name"
                android:textColor="@color/color_00bbff"
                android:textSize="14sp"/>
            <TextView 
                android:id="@+id/tv_update_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:text="@string/tv_hint_version_name"
                android:textColor="@color/color_00bbff"
                android:textSize="14sp"/>
        </LinearLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <Button 
                android:id="@+id/bt_update_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/sendbao_btn_background"
                android:text="@string/btn_update_liji"
                android:textColor="@color/color_ffffff"
                android:textSize="15sp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
