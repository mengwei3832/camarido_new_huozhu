<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F9F9F9"
    android:orientation="vertical"
    android:padding="@dimen/space_6" >

    <TextView
        android:id="@+id/tv_attention_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/space_20"
        android:layout_marginTop="@dimen/space_10"
        android:background="@drawable/msg_time"
        android:gravity="center"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:textColor="@color/color_ffffff"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_100"
        android:background="@drawable/list_background_seletor" >

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_10"
            android:background="@drawable/order_detail_location_bg1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_attention_city_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_attention_city_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_toRightOf="@id/ll_left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_attention_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="呼伦"
                android:textColor="@color/attention_first_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_attention_digst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="贝尔"
                android:textColor="@color/wallet_income"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_attention_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_15"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="贝尔"
                android:textColor="@color/attention_third_text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_attention_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space_12"
            android:layout_marginTop="@dimen/space_10"
            android:text="贝尔"
            android:textColor="@color/color_ff4400"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_attention_read_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/space_12"
            android:layout_marginRight="@dimen/space_12"
            android:text="贝尔"
            android:textColor="@color/wallet_income"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>