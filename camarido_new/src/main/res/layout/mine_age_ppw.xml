<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_selvehicle_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ppw_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_62"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_mineage_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_30"
                android:text="@string/repeat_cancel"
                android:textColor="@color/color_ff4400"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_mineage_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_30"
                android:text="@string/sure"
                android:textColor="@color/color_229AEE"
                android:textSize="@dimen/space_16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_e4e4e4" />


        <com.yunqi.clientandroid.view.wheel.views.WheelView
            android:id="@+id/wv_mineage_show"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_175"
            android:layout_gravity="center_vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_e4e4e4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_16"
            android:background="@color/color_ffffff" />
    </LinearLayout>

</RelativeLayout>