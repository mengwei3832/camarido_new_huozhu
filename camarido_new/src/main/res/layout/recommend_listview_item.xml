<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"
        android:layout_marginTop="@dimen/space_14" >

        <TextView
            android:id="@+id/tv_recommend_list_userName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_recommend_list_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_20"
            android:gravity="center"
            android:text=""
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_recommend_list_firstTransport"
            android:layout_width="@dimen/space_80"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_20"
            android:gravity="center_vertical"
            android:text="wancheng"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_recommend_list_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_10"
            android:gravity="center_vertical"
            android:text="dsada"
            android:textColor="@color/color_ff0000"
            android:textSize="12sp" />
    </LinearLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/space_12"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"
        android:background="@color/color_ffff00"/>

</LinearLayout>