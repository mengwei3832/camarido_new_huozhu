<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_foot_bao_detail_qiang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_35" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_15"
            android:text="@string/employer_bao_yiqiang"
            android:textColor="@color/color_666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_foot_bao_detail_qiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_foot_bao_detail_imageView1"
            android:text="32"
            android:textColor="@color/color_ff0000"
            android:layout_marginRight="@dimen/space_15"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_foot_bao_detail_imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_15"
            android:src="@drawable/jiantoubao" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginLeft="@dimen/space_15"
        android:background="@color/color_cccccc" />

    <RelativeLayout
        android:id="@+id/rl_foot_bao_detail_zhixing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_35" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_15"
            android:text="@string/employer_bao_zhixing"
            android:textColor="@color/color_666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_foot_bao_detail_zhixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_foot_bao_detail_imageView2"
            android:text="15"
            android:textColor="@color/color_ff0000"
            android:layout_marginRight="@dimen/space_15"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_foot_bao_detail_imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_15"
            android:src="@drawable/jiantoubao" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginLeft="@dimen/space_15"
        android:background="@color/color_cccccc" />

    <RelativeLayout
        android:id="@+id/rl_foot_bao_detail_shenhe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_35" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_15"
            android:text="@string/employer_bao_shenhe"
            android:textColor="@color/color_666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_foot_bao_detail_shenhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_foot_bao_detail_imageView3"
            android:text="15"
            android:textColor="@color/color_ff0000"
            android:layout_marginRight="@dimen/space_15"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_foot_bao_detail_imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_15"
            android:src="@drawable/jiantoubao" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginLeft="@dimen/space_15"
        android:background="@color/color_cccccc" />

    <RelativeLayout
        android:id="@+id/rl_foot_bao_detail_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_35" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_15"
            android:text="@string/employer_bao_lishi"
            android:textColor="@color/color_666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_foot_bao_detail_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_foot_bao_detail_imageView4"
            android:text="02"
            android:textColor="@color/color_ff0000"
            android:layout_marginRight="@dimen/space_15"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_foot_bao_detail_imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_15"
            android:src="@drawable/jiantoubao" />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_80"
        android:background="@color/color_cccccc"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/bt_foot_bao_detail_stop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginRight="@dimen/space_10"
            android:text="@string/employer_bao_stop"
            android:textColor="@color/color_ffffff"
            android:textSize="14sp"
            android:background="@drawable/employer_foot_bao_detail_stop_selector"/>
        <Button 
            android:id="@+id/bt_foot_bao_detail_copy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginRight="@dimen/space_10"
            android:text="@string/employer_bao_cpoy"
            android:textColor="@color/color_ffffff"
            android:textSize="14sp"
            android:background="@drawable/employer_foot_bao_detail_copy_selector"/>
    </LinearLayout>

</LinearLayout>