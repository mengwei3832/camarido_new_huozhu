<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp" >

        <LinearLayout
            android:layout_width="176dp"
            android:layout_height="41dp"
            android:background="@drawable/employer_add_car_bg" >

            <Button
                android:id="@+id/btn_provence"
                android:layout_width="65dp"
                android:layout_height="37dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:background="@drawable/add_car_btn_bg"
                android:drawableEnd="@drawable/xialajiantou"
                android:drawableRight="@drawable/xialajiantou"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/_car"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_car_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:hint="@string/et_car_num"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingRight="0dp"
                android:textColor="#BABABA"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_add_car"
            android:layout_width="100dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/add_car_btn_bg"
            android:text="@string/btn_add_car"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </RelativeLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15sp" />

</LinearLayout>