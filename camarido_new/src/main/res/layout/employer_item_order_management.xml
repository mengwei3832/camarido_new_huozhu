<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eeeeee"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_126"
        android:layout_margin="@dimen/space_10"
        android:orientation="vertical"
        android:background="@drawable/package_card_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@color/color_cceeff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_order_item_begin"
                android:layout_width="@dimen/space_130"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_10"
                android:gravity="center_vertical"
                android:text=""
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/color_606060"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_10"
                android:gravity="center_vertical"
                android:text="@string/employer_item_tv_zhi"
                android:textColor="@color/color_00bbff"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_order_item_end"
                android:layout_width="@dimen/space_130"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_10"
                android:gravity="center_vertical"
                android:text=""
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/color_606060"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.5"
            android:orientation="horizontal">
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView 
                        android:id="@+id/tv_order_item_quoted_price"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="" 
                        android:gravity="center"/>
                    <TextView 
                        android:id="@+id/tv_order_item_sure"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="" 
                        android:gravity="center"/>
                    <TextView 
                        android:id="@+id/tv_order_item_finish"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="" 
                        android:gravity="center"/>
                </LinearLayout>
                <View 
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/color_cceeff"
                    android:layout_marginLeft="@dimen/space_10"/>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView 
                        android:id="@+id/tv_order_item_sumdun"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/space_10"
                        android:text=""
                        android:textColor="@color/color_303030"
                        android:textSize="12sp"/>
                    <ImageView 
                        android:id="@+id/iv_order_item_insurance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/package_insurance"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/space_20"/>
                </LinearLayout>
                <View 
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/color_cceeff"
                    android:layout_marginLeft="@dimen/space_10"/>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView 
                        android:id="@+id/tv_order_item_date"
                        android:layout_width="0dp"
                        android:layout_weight="4.5"
                        android:layout_height="match_parent"
                        android:text=""
                        android:gravity="center"
                        android:textColor="@color/color_303030"
                        android:textSize="12sp"/>
                    <TextView 
                        android:id="@+id/tv_order_item_cocal"
                        android:layout_width="0dp"
                        android:layout_weight="2.3"
                        android:layout_height="match_parent"
                        android:text=""
                        android:gravity="center"
                        android:textColor="@color/color_303030"
                        android:textSize="12sp"/>
                    <TextView 
                        android:id="@+id/tv_order_item_vehicle_number"
                        android:layout_width="0dp"
                        android:layout_weight="3.2"
                        android:layout_height="match_parent"
                        android:text=""
                        android:gravity="center"
                        android:textColor="@color/color_303030"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout 
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent">
                <Button 
                    android:id="@+id/tv_order_item_manager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_ffffff"
                    android:textSize="15sp"
                    android:background="@drawable/package_btn_background"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>