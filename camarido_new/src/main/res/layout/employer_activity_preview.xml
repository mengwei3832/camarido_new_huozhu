<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f1f1f1" >
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/space_10">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff"
            android:orientation="vertical">
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45"
                android:orientation="horizontal">
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="match_parent">
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_2299EE"
                        android:textSize="15sp"
                        android:layout_centerInParent="true"
                        android:text="@string/tv_time_range"/>
                </RelativeLayout>
                <View 
                    android:layout_width="@dimen/space_1"
                    android:layout_height="@dimen/space_35"
                    android:background="@color/color_f1f1f1"
                    android:layout_gravity="center_vertical"/>
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_weight="7.5"
                    android:layout_height="match_parent">
                    <TextView 
                        android:id="@+id/tv_preview_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_444444"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_10"/>
                </RelativeLayout>
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="@color/color_f1f1f1"/>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_90"
                android:orientation="horizontal">
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="match_parent">
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/color_2299EE"
                        android:textSize="15sp"
                        android:layout_marginTop="@dimen/space_10"
                        android:text="@string/tv_xie_zhaung_addr"/>
                </RelativeLayout>
                <View 
                    android:layout_width="@dimen/space_1"
                    android:layout_height="@dimen/space_80"
                    android:background="@color/color_f1f1f1"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout 
                    android:layout_width="0dp"
                    android:layout_weight="7.5"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView 
                        android:id="@+id/tv_preview_ship"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_444444"
                        android:textSize="15sp"
                        android:layout_marginLeft="@dimen/space_10"/>
                    <View 
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_1"
                        android:background="@color/color_f1f1f1"/>
                    <TextView 
                        android:id="@+id/tv_preview_discharge"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_444444"
                        android:textSize="15sp"
                        android:layout_marginLeft="@dimen/space_10"/>
                </LinearLayout>
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="@color/color_f1f1f1"/>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45"
                android:orientation="horizontal">
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="match_parent">
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_2299EE"
                        android:textSize="15sp"
                        android:layout_centerInParent="true"
                        android:text="@string/employer_activity_preview_vehicle"/>
                </RelativeLayout>
                <View 
                    android:layout_width="@dimen/space_1"
                    android:layout_height="@dimen/space_35"
                    android:background="@color/color_f1f1f1"
                    android:layout_gravity="center_vertical"/>
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_weight="7.5"
                    android:layout_height="match_parent">
                    <TextView 
                        android:id="@+id/tv_preview_vehicle_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_444444"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/space_10"/>
                </RelativeLayout>
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="@color/color_f1f1f1"/>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45"
                android:orientation="horizontal">
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="match_parent">
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_2299EE"
                        android:textSize="15sp"
                        android:layout_centerInParent="true"
                        android:text="@string/employer_activity_preview_goods"/>
                </RelativeLayout>
                <View 
                    android:layout_width="@dimen/space_1"
                    android:layout_height="@dimen/space_35"
                    android:background="@color/color_f1f1f1"
                    android:layout_gravity="center_vertical"/>
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_weight="7.5"
                    android:layout_height="match_parent">
                    <TextView 
                        android:id="@+id/tv_preview_goods_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_444444"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_10"/>
                </RelativeLayout>
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="@color/color_f1f1f1"/>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45"
                android:orientation="horizontal">
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="match_parent">
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_2299EE"
                        android:textSize="15sp"
                        android:layout_centerInParent="true"
                        android:text="@string/employer_activity_preview_tusui"/>
                </RelativeLayout>
                <View 
                    android:layout_width="@dimen/space_1"
                    android:layout_height="@dimen/space_35"
                    android:background="@color/color_f1f1f1"
                    android:layout_gravity="center_vertical"/>
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_weight="7.5"
                    android:layout_height="match_parent">
                    <TextView 
                        android:id="@+id/tv_preview_tusun_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_444444"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_10"/>
                </RelativeLayout>
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="@color/color_f1f1f1"/>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45"
                android:orientation="horizontal">
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="match_parent">
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_2299EE"
                        android:textSize="15sp"
                        android:layout_centerInParent="true"
                        android:text="@string/tv_jie_suan"/>
                </RelativeLayout>
                <View 
                    android:layout_width="@dimen/space_1"
                    android:layout_height="@dimen/space_35"
                    android:background="@color/color_f1f1f1"
                    android:layout_gravity="center_vertical"/>
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_weight="7.5"
                    android:layout_height="match_parent">
                    <TextView 
                        android:id="@+id/tv_preview_billing_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_444444"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_10"/>
                </RelativeLayout>
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="@color/color_f1f1f1"/>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45"
                android:orientation="horizontal">
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="match_parent">
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_2299EE"
                        android:textSize="15sp"
                        android:layout_centerInParent="true"
                        android:text="@string/employer_activity_preview_fapiao"/>
                </RelativeLayout>
                <View 
                    android:layout_width="@dimen/space_1"
                    android:layout_height="@dimen/space_35"
                    android:background="@color/color_f1f1f1"
                    android:layout_gravity="center_vertical"/>
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_weight="7.5"
                    android:layout_height="match_parent">
                    <TextView 
                        android:id="@+id/tv_preview_invoice_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_444444"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_10"/>
                </RelativeLayout>
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="@color/color_f1f1f1"/>
            <LinearLayout 
                android:id="@+id/ll_remark"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45"
                android:visibility="gone"
                android:orientation="horizontal">
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="match_parent">
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_2299EE"
                        android:textSize="15sp"
                        android:layout_centerInParent="true"
                        android:text="@string/tv_note"/>
                </RelativeLayout>
                <View 
                    android:layout_width="@dimen/space_1"
                    android:layout_height="@dimen/space_35"
                    android:background="@color/color_f1f1f1"
                    android:layout_gravity="center_vertical"/>
                <RelativeLayout 
                    android:layout_width="0dp"
                    android:layout_weight="7.5"
                    android:layout_height="match_parent">
                    <TextView 
                        android:id="@+id/tv_preview_remark_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_444444"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_10"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    
    <Button 
        android:id="@+id/bt_preview_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_10"
        android:background="@drawable/sendbao_btn_background"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_ffffff"
        android:textSize="15sp"
        android:text="@string/employer_activity_preview_next"/>

</RelativeLayout>
