<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_140"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_37" >

        <TextView
            android:id="@+id/tv_perform_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_13"
            android:textColor="@color/color_333333"
            android:textSize="17sp" />
        
        <TextView
            android:id="@+id/tv_perform_ordernumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_perform_date"
            android:layout_toLeftOf="@+id/iv_perform_ticket_qubie"
            android:layout_marginLeft="@dimen/space_150"
            android:layout_marginRight="@dimen/space_14"
            android:textColor="@color/color_808080"
            android:textSize="12sp" />
        
        <ImageView 
            android:id="@+id/iv_perform_ticket_qubie"
            android:layout_width="@dimen/space_38"
            android:layout_height="@dimen/space_40"
            android:layout_alignParentRight="true"
            />
       
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/color_e4e4e4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_102" >

        <RelativeLayout
            android:id="@+id/rl_perform_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_13"
            android:layout_marginTop="@dimen/space_13" >

            <ImageView
                android:id="@+id/iv_perform_vehiclebg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_perform_licensehead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_ffffff"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_perform_licensenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ffffff"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_perform_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_toRightOf="@id/rl_perform_license"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_perform_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_12"
                android:textColor="@color/color_ff4400"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_12"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/route_provenance" />

                <TextView
                    android:id="@+id/tv_perform_provenance"
                    android:layout_width="@dimen/space_188"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_5"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/route_provenance"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/route_destination" />

                <TextView
                    android:id="@+id/tv_perform_destination"
                    android:layout_width="@dimen/space_188"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_5"
                    android:gravity="center_vertical"
                    android:text="@string/route_destination"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space_13"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_perform_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/space_12"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_perform_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/space_2"
                android:textColor="@color/color_333333"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="@dimen/space_90"
                android:layout_height="@dimen/space_30"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/space_8" >

                <Button
                    android:id="@+id/btn_perform_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/perform_button_selector"
                    android:clickable="true"
                    android:focusable="false"
                    android:textColor="@color/color_ffffff"
                    android:textSize="15sp" />

                <com.yunqi.clientandroid.utils.CustomDigitalClock
                    android:id="@+id/cdc_perform_remainTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/suodinganjian"
                    android:clickable="true"
                    android:focusable="false"
                    android:gravity="center"
                    android:textColor="@color/color_ffffff"
                    android:textSize="15sp"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>