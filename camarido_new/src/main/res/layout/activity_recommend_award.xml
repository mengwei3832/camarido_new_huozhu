<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout 
                android:id="@+id/ll_recommend_guize"
                android:layout_width="@dimen/space_70"
            	android:layout_height="wrap_content"
            	android:layout_gravity="right"
            	android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"
                android:text="活动规则"
                android:textSize="15sp"
                android:textColor="@color/color_ff0000"
                />
            <TextView 
                android:layout_width="@dimen/space_60"
                android:layout_height="@dimen/space_2"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/space_10"
                android:background="@color/color_ff0000"/>
            
            </LinearLayout>
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gundong"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_190">
                <TextView 
                    android:id="@+id/tv_recommed_marquee"
                    android:layout_width="@dimen/space_300"
                    android:layout_height="@dimen/space_23"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/space_10"
                	android:layout_marginRight="@dimen/space_10"
                	android:layout_centerHorizontal="true"
                	android:gravity="center_vertical"
                	android:ellipsize="marquee" 
        			android:focusable="true" 
        			android:singleLine="true"
        			android:focusableInTouchMode="true"
        			android:marqueeRepeatLimit="marquee_forever" 
        			android:scrollHorizontally="true"
                    android:textSize="10sp"
                    android:textColor="#333"
                    android:text=""/>
            </RelativeLayout>
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_30">
                <TextView 
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="18sp"
                    android:textColor="#333"
                    android:text="@string/mine_recommend_text1"/>
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:layout_toLeftOf="@+id/tv_2"
                    android:layout_marginTop="@dimen/space_8"
                    android:layout_marginRight="@dimen/space_17"
                    android:layout_marginLeft="@dimen/space_30"
                    android:background="@color/color_ffff00"/>
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:layout_toRightOf="@+id/tv_2"
                    android:layout_marginTop="@dimen/space_8"
                    android:layout_marginRight="@dimen/space_30"
                    android:layout_marginLeft="@dimen/space_17"
                    android:background="@color/color_ffff00"/>
            </RelativeLayout>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_14"/>
            <com.yunqi.clientandroid.view.TaskAwardListView 
                android:id="@+id/lv_recommend_award"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </ScrollView>
    
    <FrameLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_15"
        android:layout_gravity="bottom|center_horizontal">
        <TextView 
            android:id="@+id/tv_recommend_feixiang_anjian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fenxiang"/>
    </FrameLayout>

</LinearLayout>
