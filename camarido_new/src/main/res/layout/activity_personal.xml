<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_personal"
    android:background="@color/color_ffffff" >

    <LinearLayout
        android:id="@+id/ll_personal_global"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_personal_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_210"
            android:background="@color/color_229AEE" >

            <ImageButton
                android:id="@+id/ib_personal_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nav_back" />

            <com.yunqi.clientandroid.view.CircleImageView
                android:id="@+id/iv_personal_headerphoto"
                android:layout_width="@dimen/space_60"
                android:layout_height="@dimen/space_60"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/space_40"
                android:src="@drawable/personal_header"
                app:border_color="@color/light"
                app:border_width="@dimen/space_2" />

            <TextView
                android:id="@+id/tv_personal_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_personal_headerphoto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/space_10"
                android:text="@string/phonenumber"
                android:textColor="@color/color_ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_personal_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_personal_phonenumber"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/space_20"
                android:text="@string/personal_nickname"
                android:textColor="@color/color_ffffff"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/rl_personal_realname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/space_13"
                android:layout_marginLeft="@dimen/space_48" >

                <ImageView
                    android:id="@+id/iv_personal_realname_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/certification_nomal" />

                <TextView
                    android:id="@+id/tv_personal_realname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_personal_realname_photo"
                    android:text="@string/realname"
                    android:textColor="@color/color_ffffff"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_personal_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/space_13"
                android:layout_marginRight="@dimen/space_14" >

                <ImageView
                    android:id="@+id/iv_personal_driver_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/certification_nomal" />

                <TextView
                    android:id="@+id/tv_personal_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_personal_driver_photo"
                    android:text="@string/driver"
                    android:textColor="@color/color_ffffff"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_10"
            android:background="@color/color_edebf0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/color_ffffff"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_personal_age"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45"
                android:clickable="true" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_personal_agemsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_46"
                        android:text="@string/personal_age"
                        android:textColor="@color/color_333333"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_personal_ageshow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/selector_age"
                        android:textColor="@color/color_cccccc"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/v_personal_view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:layout_marginLeft="@dimen/space_46"
                android:background="@color/color_edebf0" />

            <RelativeLayout
                android:id="@+id/rl_personal_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45"
                android:clickable="true" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_personal_sexmsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_46"
                        android:text="@string/personal_sexmsg"
                        android:textColor="@color/color_333333"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_personal_sexshow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/selector_sex"
                        android:textColor="@color/color_cccccc"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/v_personal_view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:layout_marginLeft="@dimen/space_46"
                android:background="@color/color_edebf0" />

            <RelativeLayout
                android:id="@+id/rl_personal_nickname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_personal_nickmsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_46"
                        android:text="@string/personal_nickmsg"
                        android:textColor="@color/color_333333"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/tv_personal_nickshow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_ffffff"
                        android:hint="@string/personal_et_nick"
                        android:singleLine="true"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/v_personal_view3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:layout_marginLeft="@dimen/space_46"
                android:background="@color/color_edebf0" />

            <RelativeLayout
                android:id="@+id/rl_personal_nameauthentication"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45"
                android:clickable="true" >

                <TextView
                    android:id="@+id/tv_personal_nameauthentication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/space_46"
                    android:text="@string/realname"
                    android:textColor="@color/color_333333"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/ib_personal_realname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_15"
                    android:background="@drawable/enter_up" />
            </RelativeLayout>

            <View
                android:id="@+id/v_personal_view4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:layout_marginLeft="@dimen/space_46"
                android:background="@color/color_edebf0" />

            <RelativeLayout
                android:id="@+id/rl_personal_driverauthentication"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45"
                android:clickable="true" >

                <TextView
                    android:id="@+id/tv_personal_driverauthentication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/space_46"
                    android:text="@string/driver"
                    android:textColor="@color/color_333333"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/ib_personal_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_15"
                    android:background="@drawable/enter_up" />
            </RelativeLayout>

            <View
                android:id="@+id/v_personal_view5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:layout_marginLeft="@dimen/space_46"
                android:background="@color/color_edebf0" />

            <TextView
                android:id="@+id/tv_personal_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_30"
                android:gravity="center"
                android:text="测试所有路线入口--暂留"
                android:textColor="#333"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_personal_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>