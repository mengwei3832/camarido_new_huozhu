<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_selvehicle_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ppw_bg"
    android:orientation="vertical" >

    <View
        android:id="@+id/black_block"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_62"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="92dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/space_30"
                android:paddingRight="@dimen/space_30"
                android:text="@string/repeat_cancel"
                android:textColor="@color/color_ff4400"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_sure"
				android:layout_alignParentRight="true"
                android:layout_width="92dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/space_30"
                android:paddingRight="@dimen/space_30"
                android:text="@string/sure"
                android:textColor="@color/color_229AEE"
                android:textSize="@dimen/space_16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_e4e4e4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_175" >
			<EditText
			    android:textSize="@dimen/space_16" 
			    android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
			    android:gravity="top" 
			    android:hint="@string/cancle_result"
			    android:id="@+id/et_cancle_reason"
			    android:inputType="text"
			    android:background="#00000000"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_e4e4e4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_16"
            android:background="@color/color_ffffff" />
    </LinearLayout>

</LinearLayout>