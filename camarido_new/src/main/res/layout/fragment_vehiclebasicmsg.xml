<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:id="@+id/ll_carbasic_global"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_carbasic_xingxian"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_165"
                    android:background="@color/color_F9F9F9"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_16"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_carbasic_xing1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/xingxing"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/iv_carbasic_xing2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/xingxing"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/iv_carbasic_xing3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/xingxing"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/rb_carbasic_certificationMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_10"
                        android:gravity="center"
                        android:textColor="@color/color_999999"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_carbasic_shengxing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_10"
                        android:background="@drawable/shengxing"
                        android:gravity="center"
                        android:textColor="@color/color_ffffff"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_45"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:text="@string/tv_newvehile_carlicense"
                        android:textColor="@color/color_333333"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_carbasic_vehicleNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_60"
                        android:textColor="@color/color_333333"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:id="@+id/v_newvehile_view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/color_ebebeb" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_45" >

                    <TextView
                        android:id="@+id/tv_carbasic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="11dp"
                        android:text="@string/tv_newvehile_geichecall"
                        android:textColor="@color/color_333333"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_carbasic_geichecall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_60"
                        android:layout_toRightOf="@+id/tv_carbasic"
                        android:textColor="@color/color_333333"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_carbasic_xiugai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/space_10"
                        android:text="@string/tv_newvehile_xiugaicall"
                        android:textColor="@color/color_ff0000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/v_newvehile_view3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/color_ebebeb" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_45"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/rb_carbasic_property"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_11"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@drawable/vehiclecheckbox_check"
                        android:enabled="false"
                        android:paddingLeft="@dimen/space_10"
                        android:textColor="@color/color_333333"
                        android:textSize="17sp" />
                </RadioGroup>

                <View
                    android:id="@+id/v_newvehile_view4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/color_ebebeb" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_26" >

                    <TextView
                        android:id="@+id/tv_carbasic_certificateOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_11"
                        android:textColor="@color/color_333333"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/space_126"
                        android:text="@string/tv_newvehile_driverlicense"
                        android:textColor="@color/color_333333"
                        android:textSize="15sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_88"
                    android:layout_marginTop="@dimen/space_11"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/space_11"
                        android:layout_marginRight="@dimen/space_20"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/iv_carbasic_withcardlicense"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/iv_carbasic_withcardfied"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/space_11"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/iv_carbasic_driverlicense"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/iv_driveroperating" />

                        <ImageView
                            android:id="@+id/iv_carbasic_driverlicensefied"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_newvehicle_insuranceimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_11"
                    android:layout_marginTop="@dimen/space_30"
                    android:text="@string/tv_newvehicle_insuranceimg"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_200"
                    android:layout_marginTop="@dimen/space_10" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/space_11"
                        android:layout_marginRight="@dimen/space_11" >

                        <ImageView
                            android:id="@+id/iv_carbasic_insuranceimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/iv_insuranceimg" />

                        <ImageView
                            android:id="@+id/iv_carbasic_insuranceimgfied"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:scaleType="fitXY" />
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_30"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:id="@+id/ll_carbasic_tishixinxi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_11"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="top"
                            android:text="@string/tv_namecertification_asterisk"
                            android:textColor="#ff0000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_newvehicle_xinxibiangeng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_addPersonalMsgOne"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="top"
                            android:text="@string/tv_namecertification_asterisk"
                            android:textColor="#ff0000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_addPersonalMsgTwo"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_10"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="top"
                            android:text="@string/tv_namecertification_asterisk"
                            android:textColor="#ff0000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vehicle_addPersonalMsgThree"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_20" >

                        <TextView
                            android:id="@+id/tv_carbasic_question"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/certification_question"
                            android:textColor="@color/color_ff4400"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/bt_carbasic_commit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/login_button_selector"
                    android:text="@string/commit"
                    android:textColor="@color/color_ffffff" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_carbasic_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>