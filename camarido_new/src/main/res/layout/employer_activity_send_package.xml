<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#F1F1F1">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/send_package_container">
         <ScrollView 
        android:id="@+id/sv_send_package"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <include layout="@layout/employer_activity_send_package_content"/>
        
    </ScrollView>
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="68dp">
	    <Button 
	        android:id="@+id/btn_next"
	        android:text="@string/btn_next"
	        android:textSize="17sp"
	        android:textColor="#FFFFFF"
	        android:background="@drawable/btn_bext_bg"
	        android:layout_width="235dp"
	        android:layout_height="38dp"
	        android:layout_centerInParent="true"/>
	</RelativeLayout>
        
    </LinearLayout>
       <ProgressBar 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:id="@+id/send_package_progress_bar"
           style="?android:attr/progressBarStyleSmall"
           android:visibility="gone"/>
    
	
</RelativeLayout>
