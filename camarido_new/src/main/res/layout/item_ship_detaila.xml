<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_126"
        android:layout_margin="@dimen/space_10"
        android:orientation="vertical"
        android:background="@drawable/package_card_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@color/color_cceeff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_item_ship_begin"
                android:layout_width="@dimen/space_130"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_10"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/color_606060"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_10"
                android:gravity="center_vertical"
                android:text="@string/employer_item_tv_zhi"
                android:textColor="@color/color_00bbff"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_item_ship_end"
                android:layout_width="@dimen/space_130"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_10"
                android:gravity="center_vertical"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/color_606060"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.5"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_item_ship_sum_ton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="总吨数：2345.34吨"
                        tools:mockup="@string/_1582995"
                        android:textColor="@color/color_303030"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_item_ship_ton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="待结吨数：2345.34吨"
                        android:textColor="@color/color_303030"
                        android:textSize="12sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/color_cceeff"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_ship_vehicle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="待结车数：2345.34车"
                        android:textColor="@color/color_303030"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_item_ship_price"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="待结运费：2345.34元"
                        android:textColor="@color/color_303030"
                        android:textSize="12sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/color_cceeff"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_item_ship_new_date"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="03.17~03.18"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_item_ship_coal"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="大块"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_item_ship_feright"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="运价：25元/吨"
                        android:textSize="12sp"/>
                    <ImageView
                        android:id="@+id/iv_item_ship_insurance"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:src="@drawable/package_insurance"
                        android:visibility="visible"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>